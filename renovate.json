{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "schedule": ["* 0-5 * * 0,6"],
  "timezone": "Australia/Sydney",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "dependencyDashboard": false,
  "rangeStrategy": "bump",
  "labels": ["dependencies", "renovate"],
  "packageRules": [
    {
      "matchManagers": ["docker-compose"],
      "enabled": false
    },
    {
      "groupName": "Next.js ecosystem",
      "matchPackageNames": [
        "next",
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom",
        "/@next/*/"
      ]
    },
    {
      "groupName": "TypeScript and build tools",
      "matchPackageNames": ["typescript", "@types/bun", "@types/node", "/@types/*/"]
    },
    {
      "groupName": "Database and backend",
      "matchPackageNames": ["drizzle-orm", "drizzle-kit", "postgres"]
    },
    {
      "groupName": "UI and styling",
      "matchPackageNames": [
        "tailwindcss",
        "@tailwindcss/postcss",
        "postcss",
        "autoprefixer",
        "tailwind-merge",
        "tw-animate-css",
        "clsx",
        "class-variance-authority",
        "/radix-ui/*/",
        "/lucide-react/"
      ]
    }
  ]
}
