{
	"name": "wordcraft",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"wrangler:dev": "npx wrangler dev",
		"dev:cf": "npx @opennextjs/cloudflare build && wrangler dev",
		"dev:remote": "npx @opennextjs/cloudflare build && wrangler dev --remote",
		"build:cf": "npx @opennextjs/cloudflare build",
		"deploy:cf": "npx @opennextjs/cloudflare deploy",
		"preview:cf": "npx @opennextjs/cloudflare preview",
		"deploy": "npx @opennextjs/cloudflare deploy",
		"deploy:preview": "npx @opennextjs/cloudflare deploy --env preview",
		"db:generate": "drizzle-kit generate",
		"db:generate:named": "drizzle-kit generate --name",
		"db:migrate:local": "wrangler d1 migrations apply wordcraft --local",
		"db:migrate:preview": "wrangler d1 migrations apply wordcraft --env preview",
		"db:migrate:prod": "wrangler d1 migrations apply wordcraft --remote",
		"db:studio": "drizzle-kit studio",
		"db:studio:local": "drizzle-kit studio --config=drizzle.local.config.ts",
		"db:inspect:local": "wrangler d1 execute wordcraft --local --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
		"db:inspect:preview": "wrangler d1 execute wordcraft --env preview --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
		"db:inspect:prod": "wrangler d1 execute wordcraft --remote --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
		"db:reset:local": "wrangler d1 execute wordcraft --local --command=\"DROP TABLE IF EXISTS todos;\" && bun run db:migrate:local",
		"cf:secret": "npx wrangler secret put",
		"cf-typegen": "bun exec wrangler types && bun exec wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx",
		"check-types": "tsc --noEmit",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"precommit": "./scripts/precommit.sh"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@opennextjs/cloudflare": "^1.12.0",
		"@radix-ui/react-alert-dialog": "^1.1.15",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"better-auth": "^1.3.34",
		"better-sqlite3": "^12.4.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"drizzle-zod": "^0.8.3",
		"lucide-react": "^0.544.0",
		"next": "15.4.6",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-hook-form": "^7.66.0",
		"react-hot-toast": "^2.6.0",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.3",
		"@types/react-dom": "^19.2.3",
		"drizzle-kit": "^0.31.6",
		"eslint": "^9.39.1",
		"eslint-config-next": "^16.0.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.4",
		"wrangler": "4.46.0"
	}
}
