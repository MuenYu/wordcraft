{
	"name": "wordcraft",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "bunx --bun next dev",
		"build": "bunx next build",
		"build:cf": "bunx opennextjs-cloudflare build",
		"deploy": "bunx opennextjs-cloudflare deploy",
		"db:generate": "drizzle-kit generate --name",
		"db:migrate:local": "wrangler d1 migrations apply wordcraft --local",
		"db:migrate:prod": "wrangler d1 migrations apply wordcraft --remote",
		"db:studio:local": "drizzle-kit studio --config=drizzle.local.config.ts",
		"db:studio:prod": "drizzle-kit studio --config=drizzle.config.ts",
		"cf:secret": "bunx wrangler secret put",
		"cf-typegen": "bunx wrangler types && bunx wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx",
		"check-types": "tsc --noEmit",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"precommit": "./scripts/precommit.sh",
		"cleanup": "./scripts/cleanup.sh"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@opennextjs/cloudflare": "^1.12.0",
		"@radix-ui/react-alert-dialog": "^1.1.15",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"better-auth": "^1.3.34",
		"better-sqlite3": "^12.4.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"drizzle-zod": "^0.8.3",
		"lucide-react": "^0.544.0",
		"next": "^15.5.6",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-hook-form": "^7.66.0",
		"react-hot-toast": "^2.6.0",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"drizzle-kit": "^0.31.7",
		"eslint": "^9.39.1",
		"eslint-config-next": "^16.0.3",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.4",
		"wrangler": "4.46.0"
	}
}
